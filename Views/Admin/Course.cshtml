<table class="table-hover table-bordered  table-striped body-content text-center">

    <tr class="danger">
        <th>@Html.DisplayNameFor(ww => ww.ID)</th>
        <th>@Html.DisplayNameFor(ww => ww.Code)</th>

        <th>@Html.DisplayNameFor(ww => ww.ArabicName)</th>
        <th>@Html.DisplayNameFor(ww => ww._Course)</th>
        <th>@Html.DisplayNameFor(ww => ww.Credits)</th>
        <th>@Html.DisplayNameFor(ww => ww.Prerequisits)</th>
        <th>@Html.DisplayNameFor(ww => ww.FinalExam)</th>
        <th>@Html.DisplayNameFor(ww => ww.TimeofExam)</th>
        <th>@Html.DisplayNameFor(ww => ww.DepartmentID)</th>
        <th>@Html.DisplayNameFor(ww => ww.LeveLID)</th>
        </>
        @foreach (var item in Model)
        {

        <tr class="success">
            <td>
                @Html.DisplayFor(ww => item.ID)
            </td>
            <td>
                @Html.DisplayFor(ww => item.Code)
            </td>
            <td>
                @Html.DisplayFor(ww => item.ArabicName)
            </td>
            <td>
                @Html.DisplayFor(ww => item._Course)
            </td>
            <td>
                @Html.DisplayFor(ww => item.Credits)
            </td>
            <td>
                @Html.DisplayFor(ww => item.Prerequisits)
            </td>

            <td>
                @Html.DisplayFor(ww => item.FinalExam)
            </td>
            <td>
                @Html.DisplayFor(ww => item.TimeofExam)
            </td>
            <td>
                @Html.DisplayFor(ww => item.DepartmentID)
            </td>
            <td>
                @Html.DisplayFor(ww => item.LeveLID)
            </td>

            <td style="width:100px">
                @if (item.StatusID == 1)
                {
                    <font style="color:darkblue">Active</font>

                }
                @if (item.StatusID == 2)
                {
                    <font style="color:Red;">Not Active</font>


                }

            </td>
           
                <td>
                    <center>
                        <pre> @Html.ActionLink("Change Info", "Edit_Course", "Admin",new {id=item.ID},new {@class="btn btn-primary" }) </pre>
                    </center></td>
          
      

            <td style="width:200px">
                <centr>
                 
                    @if (item.StatusID == 1)
                    {


                        @:   @Html.ActionLink("Available", "EditActivation_ALLCourses", "Admin", new { ID = item.ID, StatusID = item.StatusID }, new { @class = "btn btn-danger btn-xs" })

                    }
                    @if (item.StatusID == 2)
                    {


                        @: @Html.ActionLink("Not Available", "EditActivation_ALLCourses", "Admin", new { ID = item.ID, StatusID = item.StatusID }, new { @class = "btn btn-info btn-xs" })




                    }

                </centr>


            </td>




        </tr>

        }
    </table>



